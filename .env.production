# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration - USE EXTERNAL MANAGED DATABASE
DB_HOST=your-postgres-host.amazonaws.com
DB_PORT=5432
DB_NAME=backend_blockchain_prod
DB_USER=your_db_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION
DB_SSL=true

# Redis Configuration - USE EXTERNAL MANAGED REDIS
REDIS_HOST=your-redis-host.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_IN_PRODUCTION

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_JWT_KEY_IN_PRODUCTION_MINIMUM_32_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_SUPER_SECRET_REFRESH_JWT_KEY_IN_PRODUCTION_MINIMUM_32_CHARS
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn

# Application
APP_NAME=Backend Blockchain API
APP_VERSION=1.0.0